# Postgres
POSTGRES_DB=paperforge
POSTGRES_USER=paperforge
POSTGRES_PASSWORD=paperforgepass
POSTGRES_PORT=5433

# Database URL (for apps to consume later)
DATABASE_URL=postgresql://paperforge:paperforgepass@localhost:5433/paperforge?sslmode=disable

# API
API_PORT=7080
JWT_SECRET=paperforge-dev-secret-minimum-32-bytes
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=paperforge-dev-refresh-secret-minimum-32-bytes
JWT_REFRESH_EXPIRATION=7d
AUTH_DEFAULT_ROLE=HR
AUTH_FIRST_USER_ADMIN=true

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=paperforge

# S3/MinIO (API uses AWS SDK S3-compatible client)
S3_ENDPOINT=http://localhost:9000
S3_PRESIGN_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=paperforge
S3_FORCE_PATH_STYLE=true

# Kafka
KAFKA_BROKER_HOST_PORT=9094
KAFKA_BROKERS=localhost:9094
KAFKA_TOPIC_VERSION_CREATED=paperforge.document-version.created
KAFKA_TOPIC_OCR_COMPLETED=paperforge.ocr.completed
KAFKA_TOPIC_OCR_DLQ=paperforge.ocr.dlq

# Elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=paperforge_pages_v1

# Web
WEB_PORT=3000
PAPERFORGE_API_INTERNAL_URL=http://localhost:7080/api
