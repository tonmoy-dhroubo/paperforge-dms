{
  "name": "paperforge-dms",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.10",
    "@types/passport-jwt": "^4.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "dev:up": "docker compose up -d",
    "dev:down": "docker compose down",
    "dev:ps": "docker compose ps",
    "dev:logs": "docker compose logs -f --tail=200",
    "api:dev": "ts-node-dev --respawn --transpile-only --project apps/api/tsconfig.json apps/api/src/main.ts",
    "api:build": "tsc -p apps/api/tsconfig.build.json",
    "api:start": "node dist/apps/api/main.js",
    "api:typecheck": "tsc -p apps/api/tsconfig.build.json --noEmit"
  }
}
